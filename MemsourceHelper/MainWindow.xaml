<Window x:Class="MemsourceHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Memsource Helper" Height="350" Width="525" Icon="Resources/tr.ico" ResizeMode="CanMinimize">
    <Grid>
        <Button x:Name="btnTranslate" Content="Перевести" HorizontalAlignment="Left" Margin="23,10,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <TextBox x:Name="tbStatus" HorizontalAlignment="Left" Height="23" Margin="135,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="163" IsReadOnly="True"/>

        <GroupBox Header="Параметры" HorizontalAlignment="Left" Margin="23,55,0,0" VerticalAlignment="Top" Height="163" Width="275">
            <StackPanel>
                <Label Content="Направление перевода" Margin="10,10,0,0"/>
                <RadioButton x:Name="rbEnRu" Content="En->Ru" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" IsChecked="True"/>
                <RadioButton x:Name="rbRuEn" Content="Ru->En" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                <WrapPanel Margin="10,10,0,0">
                    <Label Content="Количество ячеек" />
                    <TextBox x:Name="tbQuantity" HorizontalAlignment="Left" Height="23" Width="120" Margin="10,0,0,0"/>
                </WrapPanel>
                
            </StackPanel>
        </GroupBox>

    </Grid>
</Window>
